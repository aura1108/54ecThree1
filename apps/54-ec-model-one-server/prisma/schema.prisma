datasource db {
  provider = "postgresql"
  url      = env("DB_URL")
}

generator client {
  provider = "prisma-client-js"
}

model UserAuth {
  createdAt      DateTime      @default(now())
  id             String        @id @default(cuid())
  otp            String?
  pan            String
  phone          String
  updatedAt      DateTime      @updatedAt
  userDetails    UserDetail?   @relation(fields: [userDetailsId], references: [id])
  userDetailsId  String?
  userDocument   UserDocument? @relation(fields: [userDocumentId], references: [id])
  userDocumentId String?
  verified       Boolean?
}

model UserDetail {
  address   String
  city      String
  createdAt DateTime   @default(now())
  dob       DateTime
  email     String
  gender    String
  id        String     @id @default(cuid())
  name      String
  pan       String
  phone     String
  pinCode   String
  updatedAt DateTime   @updatedAt
  userId    UserAuth[]
}

model UserDocument {
  createdAt DateTime   @default(now())
  id        String     @id @default(cuid())
  pan       String     @unique
  pdf1      String?
  pdf2      String?
  pdf3      String?
  updatedAt DateTime   @updatedAt
  userId    UserAuth[]
}
